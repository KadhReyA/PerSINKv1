<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sim">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="176dp"
            android:layout_marginStart="176dp" android:text="@string/judulinputSIM"/>
    <TextView
            android:text="No. SIM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="104dp"/>
    <EditText
            android:layout_width="238dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText5"
            android:textSize="12sp" android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp" android:layout_marginRight="28dp"/>
    <EditText
            android:layout_width="238dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:textSize="12sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/editText5"/>
    <TextView
            android:text="Nama "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:textSize="14sp" android:layout_marginTop="172dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Tempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <EditText
            android:layout_width="238dp"
            android:layout_height="39dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/editText2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp" android:layout_marginRight="28dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"/>
    <EditText
            android:layout_width="238dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3"
            android:textSize="12sp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp" android:layout_marginRight="28dp"/>
    <TextView
            android:text="Tanggal Lahir "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <EditText
            android:layout_width="238dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText4" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3" android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"/>
    <RadioGroup
            android:layout_width="227dp"
            android:layout_height="73dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editText4" android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/radioGroup">
        <RadioButton
                android:text="Pria"
                android:layout_width="246dp"
                android:layout_height="match_parent" android:id="@+id/radioButton" android:layout_weight="1"
                android:textSize="12sp"/>
        <RadioButton
                android:text="Wanita"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/radioButton2" android:layout_weight="1"
                android:textSize="12sp"/>
    </RadioGroup>
    <TextView
            android:text="Jenis Kelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:layout_marginTop="58dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText6" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp" android:layout_marginRight="26dp"/>
    <TextView
            android:text="Berlaku s/d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"/>
    <Button
            android:text="Simpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="56dp" android:layout_marginStart="56dp"/>
    <Button
            android:text="Hapus "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginEnd="56dp" android:layout_marginRight="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView11"/>
</android.support.constraint.ConstraintLayout>