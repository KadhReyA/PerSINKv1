<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pengaturan_notifikasi">


    <RadioGroup
            android:layout_width="227dp"
            android:layout_height="73dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="33dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/radioTime">

        <RadioButton
                android:text="15 Hari"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/radioButton15" android:layout_weight="1"
                android:textSize="12sp" tools:layout_editor_absoluteY="-129dp" tools:layout_editor_absoluteX="108dp"/>

        <RadioButton
                android:text="10 Hari"
                android:layout_width="246dp"
                android:layout_height="match_parent" android:id="@+id/radioButton10" android:layout_weight="1"
                android:textSize="12sp"/>

        <RadioButton
                android:text="5 Hari"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/radioButton5" android:layout_weight="1"
                android:textSize="12sp" tools:layout_editor_absoluteY="-129dp" tools:layout_editor_absoluteX="108dp"/>

    </RadioGroup>

    <TextView
            android:text="Waktu Notifikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notifyDay" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp" android:textSize="18sp"/>
    <Button
            android:text="Simpan"
            android:layout_width="93dp"
            android:layout_height="42dp"
            android:id="@+id/buttonDate" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp" android:layout_marginBottom="432dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="286dp"
            android:layout_height="144dp"
            android:id="@+id/textTime" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="332dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>